git clone https://github.com/axww/A.js.git /www/assbbs_com
while pgrep -f "bun"; do pkill -f "bun"; done && cd /www/assbbs_com && git fetch && git reset --hard && git pull && bun upgrade && bun install && cd /www/assbbs_com && chmod 755 * && bun add -g pm2 && bunx pm2 start ./src/app.tsx --interpreter bun && nohup bun app > app.log 2>&1 &

server {
listen 80;
listen [::]:80;
server_name abc.xyz www.abc.xyz;
root /www/a;
if ($host != 'abc.xyz') {
rewrite ^(.*)$ https://abc.xyz$1 permanent;
}
if ($scheme != 'https') {
rewrite ^(.*)$ https://$host$1 permanent;
}
location ~ ^/(js|css|ico|txt)/ {
alias /www/a/public/$1/;
try_files $uri $uri/ =404;
}
location / {
proxy_pass http://127.0.0.1:3000;
proxy_set_header Host $http_host;
}
}
