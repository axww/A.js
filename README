git clone https://github.com/axww/A.js.git /www/assbbs_com
cd /www/assbbs_com && (pkill -f "bun"  true) && (nohup bun www > www.log 2>&1 &)
cd /www/assbbs_com && (pkill -f "bun"  true) && git fetch && git reset --hard && git pull && bun upgrade && bun install && (nohup bun www > www.log 2>&1 &)

server {
listen 80;
listen [::]:80;
server_name assbbs.com www.assbbs.com;
root /www/a;
if ($host != 'assbbs.com') {
rewrite ^(.*)$ https://assbbs.com$1 permanent;
}
if ($scheme != 'https') {
rewrite ^(.*)$ https://$host$1 permanent;
}
location ~ ^/(js|css|ico|txt)/ {
alias /www/a/public/$1/;
try_files $uri $uri/ =404;
}
location / {
proxy_pass http://127.0.0.1:3000;
proxy_set_header Host $http_host;
}
}
